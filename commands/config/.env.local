# Local Environment Configuration
# Blacklist Management System v1.0.37
# 로컬 개발자 환경 최적화 설정

# === Docker Registry & Image Configuration ===
REGISTRY_URL=registry.jclee.me
IMAGE_TAG=local
REDIS_TAG=latest
POSTGRES_TAG=latest

# === Port Configuration (Local) ===
EXTERNAL_PORT=2542
INTERNAL_PORT=2542
POSTGRES_EXTERNAL_PORT=5433

# === Application Settings ===
FLASK_ENV=development
DEBUG=true
TESTING=false
SECRET_KEY=local-dev-secret-key-unsafe
JWT_SECRET_KEY=local-dev-jwt-secret-key-unsafe

# === Database Configuration (SQLite for Local) ===
POSTGRES_DB=blacklist_local
POSTGRES_USER=local_user
POSTGRES_PASSWORD=local_password
DATABASE_POOL_SIZE=2
DATABASE_MAX_OVERFLOW=5
DATABASE_POOL_TIMEOUT=5
DATABASE_POOL_RECYCLE=600

# === Cache Configuration (Redis) ===
REDIS_MAXMEMORY=128mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
CACHE_DEFAULT_TTL=30

# === Collection Settings (Local - Completely Disabled) ===
COLLECTION_ENABLED=false
FORCE_DISABLE_COLLECTION=true
RESTART_PROTECTION=true
AUTO_EXTRACT_COOKIES=false
MAX_AUTH_ATTEMPTS=999
BLOCK_DURATION_HOURS=0

# === Authentication Settings (Relaxed) ===
JWT_ACCESS_TOKEN_EXPIRES=86400
JWT_REFRESH_TOKEN_EXPIRES=604800
JWT_ENABLED=false
API_KEY_ENABLED=false
DEFAULT_API_KEY=local_dev_key_unsafe
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# === External Services (Local - Disabled) ===
REGTECH_USERNAME=disabled
REGTECH_PASSWORD=disabled
REGTECH_BASE_URL=http://localhost:8080
SECUDIUM_USERNAME=disabled
SECUDIUM_PASSWORD=disabled
SECUDIUM_BASE_URL=http://localhost:8081

# === Performance Configuration (Local) ===
GUNICORN_WORKERS=1
GUNICORN_THREADS=1
GUNICORN_TIMEOUT=15
GUNICORN_KEEPALIVE=1
GUNICORN_MAX_REQUESTS=50
GUNICORN_MAX_REQUESTS_JITTER=5

# === Logging Configuration ===
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty

# === Monitoring Configuration (Disabled) ===
PROMETHEUS_ENABLED=false
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=60

# === Feature Flags ===
ENABLE_V2_API=true
ENABLE_COOKIE_COLLECTION=false
ENABLE_METRICS=false

# === Security Configuration (Disabled for Local) ===
SECURITY_HEADERS_ENABLED=false
RATE_LIMIT_ENABLED=false
RATE_LIMIT_API=999999/hour

# === Watchtower Configuration (Disabled) ===
WATCHTOWER_INTERVAL=999999
SLACK_WEBHOOK_URL=

# === Volume Paths (Local) ===
DATA_PATH=./local-data/blacklist
LOGS_PATH=./local-logs
REDIS_DATA_PATH=./local-data/redis
POSTGRES_DATA_PATH=./local-data/postgresql