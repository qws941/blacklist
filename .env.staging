# Blacklist System Staging Environment Configuration

# Database Configuration
POSTGRES_HOST=blacklist-postgres
POSTGRES_PORT=5432
POSTGRES_DB=blacklist
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=blacklist-redis
REDIS_PORT=6379

# Application Configuration
FLASK_ENV=staging
PORT=2542
TZ=Asia/Seoul
LOG_LEVEL=DEBUG
PYTHONUNBUFFERED=1

# Gunicorn Staging Settings (더 적은 리소스)
GUNICORN_WORKERS=2
GUNICORN_MAX_REQUESTS=500
GUNICORN_TIMEOUT=60

# Database Connection Settings
DB_RETRY_COUNT=3
DB_RETRY_DELAY=5
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Health Check Settings
HEALTH_CHECK_TIMEOUT=15
STARTUP_PROBE_DELAY=30

# Development Settings
DEBUG=true
TESTING=false

# Data Collection Settings (스테이징에서는 비활성화)
COLLECTION_ENABLED=false

# Backup Settings (스테이징에서는 단순화)
BACKUP_ENABLED=false