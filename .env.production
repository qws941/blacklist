# Production Environment Configuration for Blacklist System

# Database Configuration
POSTGRES_HOST=blacklist-postgres-prod
POSTGRES_PORT=5432
POSTGRES_DB=blacklist
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=blacklist-redis-prod
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
FLASK_ENV=production
PORT=2542
SECRET_KEY=your_super_secure_secret_key_here

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com
MAX_CONTENT_LENGTH=16777216  # 16MB

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
REDIS_CONNECTION_POOL_SIZE=10

# Feature Flags
ENABLE_API_V2=true
ENABLE_ADVANCED_FILTERING=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUTO_BLOCKING=false  # Set to true when ready